{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/defaultconfig.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "lib": [
    "es6",
    "es2015",
    "dom"
  ],
  "typeRoots": [
    "node_modules/@types",
    "./src/types"
  ]
}
