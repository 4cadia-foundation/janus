{
    "compilerOptions": {
        "lib": [
            "es2015.promise",
            "dom"
        ],
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "types/*"
            ]
        },
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": false,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ]
}