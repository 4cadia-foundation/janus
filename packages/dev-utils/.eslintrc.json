{
  "env": {
    "es6": true
  },
  "extends": [
    "prettier-standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "htmlWhitespaceSensitivity": "css"
      }
    ]
  }
}
